@model List<Util.Core.Models.FirmDTO>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Наименование</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td class="text-left">@item.NameRus</td>
            </tr>
        }


    </table>
</div>
